{
  "name": "@splunk/stylelint-config",
  "version": "4.0.0",
  "description": "Standardized Splunk stylelint configuration",
  "main": "styled.js",
  "license": "Apache-2.0",
  "author": "Splunk Inc.",
  "scripts": {
    "build": "babel src -d .",
    "lint": "eslint src --ext \".js,.jsx\"",
    "lint:fix": "eslint src --ext \".js, .jsx\" --fix",
    "lint:ci": "yarn run lint -- -f junit -o test-reports/lint-results.xml",
    "start": "babel src -d . --watch"
  },
  "dependencies": {
    "stylelint-config-standard": "^19.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@splunk/babel-preset": "^2.0.2",
    "@splunk/eslint-config": "^2.0.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-add-module-exports": "^1.0.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.1"
  },
  "peerDependencies": {
    "stylelint": "^13"
  },
  "engines": {
    "node": ">=10"
  }
}
