{
  "name": "use-typed-event-listener",
  "version": "3.0.0",
  "description": "React Hook for DOM event listeners with TypeScript supported",
  "keywords": [
    "document",
    "event",
    "event-listener",
    "hooks",
    "react",
    "react-hooks",
    "typed",
    "typescript",
    "window"
  ],
  "homepage": "https://github.com/foray1010/use-typed-event-listener",
  "bugs": "https://github.com/foray1010/use-typed-event-listener/issues",
  "repository": "foray1010/use-typed-event-listener",
  "license": "MIT",
  "author": "foray1010",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "yarn clean:build",
    "build": "tsc --project tsconfig.build.json && rollup -c",
    "ci": "npm-run-all -p 'lint:*' 'type:*' && yarn test && yarn build && size-limit",
    "clean:build": "shx rm -rf dist/ build/dts/",
    "eslint": "eslint --ext=cjs,js,mjs,ts,tsx --ignore-path=node_modules/@foray1010/eslint-config/eslintignore",
    "lint": "npm-run-all -p 'lint:*'",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prepublishOnly": "yarn ci",
    "prettier": "prettier --ignore-path=node_modules/@foray1010/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=node_modules/@foray1010/remark-preset/remarkignore --ignore-path-resolve-from=cwd",
    "test": "jest --config .jestrc.json",
    "type:check": "tsc",
    "type:coverage": "type-coverage --strict --at-least 100 --detail --ignore-catch"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.2",
    "use-deep-compare": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.11.0",
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-conventional": "9.1.1",
    "@foray1010/babel-preset": "5.2.0",
    "@foray1010/eslint-config": "3.4.0",
    "@foray1010/prettier-config": "4.1.0",
    "@foray1010/remark-preset": "3.1.0",
    "@foray1010/tsconfig": "2.1.0",
    "@rollup/plugin-babel": "5.1.0",
    "@size-limit/preset-small-lib": "4.5.5",
    "@testing-library/react": "10.4.7",
    "@testing-library/react-hooks": "3.4.1",
    "@types/jest": "26.0.8",
    "@types/react": "16.9.44",
    "@types/react-dom": "16.9.8",
    "@types/testing-library__dom": "7.5.0",
    "@types/testing-library__react-hooks": "3.4.0",
    "eslint": "7.6.0",
    "husky": "4.2.5",
    "ignore-sync": "2.0.1",
    "jest": "26.2.2",
    "lint-staged": "10.2.11",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-test-renderer": "16.13.1",
    "remark-cli": "8.0.1",
    "rollup": "2.23.0",
    "rollup-plugin-dts": "1.4.9",
    "rollup-plugin-terser": "6.1.0",
    "shx": "0.3.2",
    "size-limit": "4.5.5",
    "ts-node": "8.10.2",
    "type-coverage": "2.9.0",
    "typescript": "3.9.7"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "typescript": ">=3.5.1"
  },
  "engines": {
    "node": ">=10.13"
  }
}
